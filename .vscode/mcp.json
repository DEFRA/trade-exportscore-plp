{
  "servers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "ado": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@azure-devops/mcp", "defragovuk"]
    },
    // SonarQube Configuration using Docker
    "sonarqube": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--env-file",
        ".env", // put your SONARQUBE_TOKEN in your local .env file
        "-e",
        "SONARQUBE_URL",
        "-e",
        "SONARQUBE_ORG",
        "-e",
        "SONARQUBE_PROJECT_KEY",
        "mcp/sonarqube"
      ],
      "env": {
        "SONARQUBE_URL": "https://sonarcloud.io",
        "SONARQUBE_ORG": "defra",
        "SONARQUBE_PROJECT_KEY": "trade-exportscore-plp"
      }
    }
    // SonarQube Configuration using Java
    // "sonarqube": {
    //   "command": "java",
